import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
        double sum = 0;
        int counter = 0;
        int input=0;
        System.out.print("Enter a series of values (0 to quit): ");
        Scanner in = new Scanner(System.in);
        while ((input = in.nextInt()) != 0) {
            sum = input + sum;
            counter++;
        }
            System.out.println(sum);
        }
}
